@using System.Collections
@model Imzist.Web.Models.AddListingViewModel

  @using(Html.BeginForm()){ 
       
    @Html.HiddenFor(m=>m.UserId)

    @Html.DropDownListFor(m => m.Categories,Model.Categories.Select(c => new SelectListItem{Text = c.Name, Value = c.Id.ToString()}),new {name="CategoryId"})
    
    @Html.TextBox("Title","", new {placeholder = "Title"})
    
    @Html.TextArea("Item.Description", new {placeholder = "Description" })
    
      <select name="expirationDays">
          <option value="7">7 Days</option>
          <option value="14">14 Days</option>
          <option value="30">30 Days</option>
      </select>
    
    <input type="file" name="Images[0]"/>
    <input type="file" name="Images[1]"/>
    <input type="file" name="Images[2]"/>
    <input type="file" name="Images[3]"/>
    <input type="file" name="Images[4]"/>
  }

