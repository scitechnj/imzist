@using Imzist.Data
@model Imzist.Web.Models.ItemViewModel 

<div class="modal fade bs-modal-lg" id="contact" tabindex="-1" role="dialog" aria-labelledby="contactLabel" aria-hidden="true" style="margin-top: 100px;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="contactLabel">Contact</h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="form-group">
                        <label for="email">Email Address</label>
                        <input id="email" class="form-control" type="email"/>
                    </div>
                    <div class="form-group">
                        <label for="message">Message</label>
                        <textarea id="message" class="form-control" rows="8"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Send</button>
            </div>
        </div>
    </div>
</div>

<div class="container" style="margin-top: 100px;">
    <div class="row">
        <div class="col-2">
            <button class="btn btn-primary btn-lg" data-toggle="modal" data-target=".bs-modal-lg" style="margin-top: 25px; display: block;">Contact</button>
        </div>
        <div class="col-10" style="color: white;">
            <h2>@Model.Item.Title</h2>

            <p style="font-size: 130%; margin-bottom: 60px;">@Model.Item.Description</p>

            <div class="images">
                
                @foreach(Image image in Model.Item.Images)
                {
                    <img src="~/Content/images/full/@image.Name" style="height: 200px; margin-right: 20px; margin-bottom: 20px;"/>
                }
            </div>

        </div>
    </div>
</div>

@section scripts
{
    <script>
        $(function() {
            var lis = $('.nav > li');
            menu_focus(lis[1], 4);
        })
    </script>
}