
@section styles
{
    <link rel="stylesheet" href="../../Content/Login.css"/>
}

<div class="container" style="margin-top: 100px;">
    <div class="row">
        <div class="col-sm-6 col-lg-6 col-lg-offset-3">
            <div class="account-wall" style="border-radius: 15px; padding-left: 15px; padding-right: 15px;">
                <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                     alt="">
                <form class="form-signin" method="POST">
                    <input type="text" class="form-control" placeholder="Username" name="username" required autofocus>
                    <input type="password" class="form-control" placeholder="Password" name="password" style="margin-bottom: 25px;" required>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">
                        Sign in</button>
                </form>
                <div class="text-center" style="margin-bottom: 8px; margin-top: 10px;">@Html.ActionLink("Create an account", "SignUp", "Account")</div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        $(function () {
            var lis = $('.nav > li');
            menu_focus(lis[2], 4);
        })
    </script>
}
