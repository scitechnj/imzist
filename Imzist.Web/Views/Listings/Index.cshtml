@section styles
{
    <style>
        .bs-sidebar .affix {
	        position: fixed; 
	        top: 70px;
	        left: 62px;
	        width: 360px;
        }
        .bs-sidebar .affix-top {
	        position: fixed; 
	        top: 70px;
	        left: 62px;
	        width: 360px;
        }
        .bs-sidebar .affix-bottom {
	        position: absolute;
        }
    </style>
}

@{ string location;}

@if (this.Context.Session["location"] != null)
{
    location = this.Context.Session["location"].ToString();
}
else
{
    location = "";
}

<div class="container">
    <div class="row">
        <div class="col-md-2">
            <div class="col-md-2">
                <div class="bs-sidebar affix" id="sidebar" data-spy="affix" data-offset-top="60" data-offset-bottom="200" style="margin-left: 10px;">
                    <div class="bs-sidebar affix" style="background-color: #f0eeec; padding: 15px; border-radius: 15px; width: 100px;">
                        <ul class="nav bs-sidenav nav-pills nav-stacked">
                            <li><a href="#">Link 1</a></li>
                            <li><a href="#">Link 2</a></li>
                        </ul>
                    </div> <!--well bs-sidebar affix-->
                </div> <!--col-md-3-->
            </div>
        </div>
        <div class="col-4" style="text-align: center;">
            <h1 style="color:white; margin-top: 80px;">Location: @location</h1>
        </div> <!--row-->
    </div>
</div>


@section scripts
{
    <script>
        $(function() {
            var lis = $('.nav > li');
            menu_focus(lis[1], 4);
        });
    </script>
}
